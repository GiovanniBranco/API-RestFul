package org.serratec.projeto01.service;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;

public class CalculadoraService {
	public Integer somar(@RequestParam Integer n1, Integer n2) {
		return n1+n2;
	}
	
	@GetMapping("/sub")
	public Integer subtrair(@RequestParam Integer n1, Integer n2) {
		return n1-n2;
	}
	
	@GetMapping("/mult")
	public Integer multiplicar(@RequestParam Integer n1, Integer n2) {
		return n1*n2;
	}
	
	@GetMapping("/div")
	public Integer dividir(@RequestParam Integer n1, Integer n2) {
		return n1/n2;
	}
}
