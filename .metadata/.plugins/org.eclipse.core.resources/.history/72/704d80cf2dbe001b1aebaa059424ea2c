package org.serratec.projeto01.controllers;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController //Indica que Ã© o Controller;
@RequestMapping("/calculadora") //Cria o endPoint;	
public class CalculadoraController {

	@GetMapping("/soma")
	public Integer somar(@RequestParam Integer n1, Integer n2) {
		return n1+n2;
	}
	
	@GetMapping("/sub")
	public Integer subtrair(Integer n1, Integer n2) {
		return n1-n2;
	}
	
	@GetMapping("/mult")
	public Integer multiplicar(Integer n1, Integer n2) {
		return n1*n2;
	}
	
	@GetMapping("/div")
	public Integer dividir(Integer n1, Integer n2) {
		return n1/n2;
	}
}
