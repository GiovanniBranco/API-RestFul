package org.serratec.backend.projeto02.service;

import java.util.HashSet;
import java.util.Set;

import org.serratec.backend.projeto02.model.ToDoEntity;
import org.springframework.stereotype.Service;

@Service
public class ToDoService {
	Set<ToDoEntity> tarefas = new HashSet<ToDoEntity>();

	
	//Adiciona tarefas
	public void adicionarEvento(ToDoEntity obj) {
		
		tarefas.add(new ToDoEntity(obj.getId(), obj.getName(), obj.getDescription()));
	}

	//Cria a Lista de tarefas
	public Set<ToDoEntity> listar(){	
		return tarefas;	
	}

	public ToDoEntity readOne(Integer id) {
		for (ToDoEntity toDoEntity : tarefas) {
			if(toDoEntity.getId() == id) {
				return toDoEntity;
			}
		}
		return null;
	}
	
	public void update (ToDoEntity obj, Integer id) {
		for (ToDoEntity toDoEntity : tarefas) {
			if(toDoEntity.getId() == id) {
				if(obj.getName() != null) {
					toDoEntity.setName(obj.getName());					
				}
				if else(obj.getDescription() != null) {
					toDoEntity.setDescription(obj.getDescription());
					
				}
				break;
			}
		}
	}
	
	//Remove tarefas
	public void deletarTarefa(Integer id) {
		for (ToDoEntity toDoEntity : tarefas) {
			if(toDoEntity.getId() == id) {
				tarefas.remove(toDoEntity);
				break;
			}
		}
	}
}
