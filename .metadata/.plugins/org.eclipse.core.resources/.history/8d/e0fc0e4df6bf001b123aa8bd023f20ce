package org.serratec.projeto03.models;

public class Operacao {
	private TipoOperacao tipoConta;
	private Double valor;
	
	public Operacao(TipoOperacao tipoConta, Double valor) {
		super();
		this.tipoConta = tipoConta;
		this.valor = valor;
	}
	public TipoOperacao getTipoConta() {
		return tipoConta;
	}
	public void setTipoConta(TipoOperacao tipoConta) {
		this.tipoConta = tipoConta;
	}
	public Double getValor() {
		return valor;
	}
	public void setValor(Double valor) {
		this.valor = valor;
	}
	
	public Double atualizarSaldo() {
		Conta c = new Conta();
		if(this.tipoConta.equals(TipoOperacao.DEBITO)) {
			Double total = c.getSaldo() + this.valor;
			c.setSaldo(total);
			return total;
		}
		
		
	}
}
