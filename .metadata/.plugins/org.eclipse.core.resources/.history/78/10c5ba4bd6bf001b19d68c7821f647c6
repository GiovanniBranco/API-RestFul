package org.serratec.projeto03.services;

import java.util.ArrayList;
import java.util.List;

import org.serratec.projeto03.models.Conta;
import org.springframework.stereotype.Service;

@Service
public class Api {
	List<Conta> contas = new ArrayList<>();
	
	private Conta getByID(Integer id) {
		for (Conta conta : contas) {
			if(id==conta.getId()) {
				return conta;
			}	
			else {
				break;
			}
		}
		return null;
	}
	
	public List<Conta> getAll(){
		return contas;
	}
	

	public Conta getOne(Integer id) {
		return this.getByID(id);
	}
	
	public Conta create(Conta conta) {
		contas.add(this.getByID(conta.getId()));
		return conta;
	}
	
	public Conta update(Integer id, Conta obj) {
		Conta conta = this.getByID(id);

		if (conta != null) {
			if (obj.getnumero() != null) {
				conta.setnumero(obj.getnumero());
			}
			if (obj.getTitular() != null) {
				conta.setTitular(obj.getTitular());
			}
			contas.set(contas.indexOf(conta), conta);
			return conta;
		}
		return null;
	}
}
